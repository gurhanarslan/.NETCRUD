@model IEnumerable<Product>
@{
    ViewData["Title"] = "List";
}

<h2 class="mt-5 text-center">Ürün Listeleme Sayfası</h2>

<div class="row">


    @foreach (var item in Model)
    {
    <div class="col-lg-3 col-md-5 mt-3">
        <div class="card">
            <div class="card-header">
                @item.Category
            </div>
            <div class="card-body">
                <h5 class="card-title"><a asp-action="Details" asp-route-id="@item.ProductId"> @item.Name</a></h5>
                <p class="card-text">Fiyatı : @item.Price TL - Açıklama : @item.Description</p>
                <a asp-action="Uptade" asp-route-id="@item.ProductId" class="btn btn-primary">Uptade</a>
                <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
    }

</div>